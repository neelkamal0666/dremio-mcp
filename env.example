# Dremio Connection Configuration
DREMIO_HOST=your-dremio-host.com
DREMIO_PORT=9047
DREMIO_USERNAME=your-username
DREMIO_PASSWORD=your-password
DREMIO_USE_SSL=true
DREMIO_VERIFY_SSL=true

# Optional: For OAuth authentication
DREMIO_CLIENT_ID=your-client-id
DREMIO_CLIENT_SECRET=your-client-secret

# AI Configuration
OPENAI_API_KEY=your-openai-api-key

# AWS Bedrock Configuration (alternative to OpenAI)
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# SSL Configuration (for corporate environments with proxy servers)
# Uncomment these lines if you're getting SSL certificate errors:
# PYTHONHTTPSVERIFY=0
# CURL_CA_BUNDLE=

# MCP Server Configuration
MCP_SERVER_NAME=dremio-mcp-server
MCP_SERVER_VERSION=1.0.0
